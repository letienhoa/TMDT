@model List<Website_BanDienThoai_Version1.Models.Products>


<br />

<div class="header_slide">
    <div class="header_bottom_right">
        <div class="slider">
            <div id="slider">
                <div id="mover">
                    <div id="slide-1" class="slide">
                        <div class="slider-img">
                            <a href="#">
                               
                                <img src="~/images/slide/LinhKien/slide-phukien-2.jpg" alt="learn more"  />
                            </a>
                        </div>
                        <div class="slider-text">
                            <h1>Xả hàng<br><span>SALE</span></h1>
                            <h2>Giảm tới 40%</h2>
                            <div class="features_list">
                                <h4>Click vào để biết thêm chi tiết về khuyến mãi</h4>
                            </div>
                            <a href="#" class="button">Shop Now</a>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="slide">
                        <div class="slider-text">
                            <h1>Xả hàng<br><span>SALE</span></h1>
                            <h2>Giảm tới 30%</h2>
                            <div class="features_list">
                                <h4>Click vào để biết thêm chi tiết về khuyến mãi</h4>
                            </div>
                            <a href="#" class="button">Shop Now</a>
                        </div>
                        <div class="slider-img">
                            <a href="#">
                              
                                <img src="~/images/slide/LinhKien/silde-phukien-1.jpg" alt="learn more" />
                            </a>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="slide">
                        <div class="slider-img">
                            <a href="#">
                              
                                <img src="~/images/slide/LinhKien/slide-phukien3.JPG"  alt="learn more"  />
                            </a>
                        </div>
                        <div class="slider-text">
                            <h1>Xả hàng<br><span>SALE</span></h1>
                            <h2>Giảm tới 10%</h2>
                            <div class="features_list">
                                <h4>Click vào để biết thêm chi tiết về khuyến mãi</h4>
                            </div>
                            <a href="#" class="button">Shop Now</a>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
</div>
<div class="content_top" style="border-width:0px">
    <div class="heading">
        <h3>Sản phẩm mới</h3>
    </div>
    <div class="see">
        <p><a href="#">Xem tất cả sản phẩm</a></p>
    </div>
    <div class="clear"></div>
</div>
<div class="main">
    <div class="row">
        @foreach (var product in Model)
        {
            @if (product.Category.Name == "Phụ kiện")
            {
        <div class="col-3">
            <div>
                <div class="card-header" style="border-width:0px">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:13px;color:dodgerblue; ">@product.Name</label>
                    </h4>
                </div>
                <br />
                <img class="card-img-top" style="height:100%;" src="@product.Image" alt="Card Image" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <br />
                            <label style="font-size:15px;color:#a51313;">Giá:&nbsp;<b>@product.Price<sup>đ</sup></b></label>
                        </div>
                        <div class="add-cart">
                            <a style="font-size:15px" asp-action="Details" asp-controller="Home" class="button" asp-route-id="@product.Id">
                                Chi tiết
                            </a>
                        </div>

                    </div>

                </div>
            </div>
        </div>
            }


        }
    </div>
</div>