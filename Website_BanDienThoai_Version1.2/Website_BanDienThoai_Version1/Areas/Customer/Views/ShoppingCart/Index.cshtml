@model Website_BanDienThoai_Version1.Models.ViewModel.ShoppingCartViewModel

@*@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}*@

    <form method="post">
        <br />
        <br />
        <h2 class="text-info" style="text-align:center;font-size:20px;text-transform:uppercase;">Giỏ hàng của bạn</h2>
        <br />
        @if (Model.Products.Count > 0)
        {
            <div class="container border border-secondary rounded" style="padding:15px">
                <div class="row">
                    <div class="col-8" style="border-right:1px solid #bbb9b9">
                        <table class="table table-striped" width="100%">
                            <tr class="table-info">
                                <th style="text-align:center;width:20%">

                                </th>
                                <th style="text-align:center;">
                                    <label asp-for="@Model.Products.FirstOrDefault().Name"></label>
                                </th>
                                <th style="text-align:center" ;">
                                    <label asp-for="@Model.Products.FirstOrDefault().Price"></label>
                                </th>
                                <th style="text-align:center" ;">
                                    <label asp-for="@Model.Products.FirstOrDefault().Color"></label>
                                </th>
                                <th style="text-align:center" ;>
                                    <label asp-for="@Model.Products.FirstOrDefault().Category.Name"></label>
                                </th>
                                <th style="text-align:center;">
                                    <label asp-for="@Model.Products.FirstOrDefault().Memory"></label>
                                </th>
                               
                                <th style="text-align:center;"></th>
                            </tr>
                            @foreach (var item in Model.Products)
                            {
                        <tr style="padding:50px;">
                            <td>
                                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                                    <img src="@item.Image" width="100" style="margin:auto; display:block; border-radius:5px; border:1px solid #bbb9b9;" />
                                </a>
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(c => item.Name)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(c => item.Price)
                            </td>

                            <td style="text-align:center">
                                @Html.DisplayFor(c => item.Color)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(c=>item.Category.Name)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(c => item.Memory)
                            </td>
                            <td style="text-align:center">
                                <button type="submit" class="btn btn-danger" asp-action="Remove" asp-route-id="@item.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                            }

                        </table>

                    </div>
                    <div class="col-4" style="padding-left:30px;">
                        <div class="row">
                            <div class="col-12">
                                <label>Name : </label>
                            </div>
                            <div class="col-12" style="padding-bottom:15px">
                                <input asp-for="@Model.Appointments.CustomerName" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label>Phone Number : </label>
                            </div>
                            <div class="col-12" style="padding-bottom:15px">
                                <input asp-for="@Model.Appointments.CustomerPhoneNumber" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label>Email  : </label>
                            </div>
                            <div class="col-12" style="padding-bottom:15px">
                                <input asp-for="@Model.Appointments.CustomerEmail" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label>Appointment Date : </label>
                            </div>
                            <div class="col-12" style="padding-bottom:15px">
                                <input asp-for="@Model.Appointments.AppointmentDate" value="" type="text" id="datepicker" class="form-control" />
                            </div>
                            <div class="col-12">
                                <button type="submit" id="btnPlaceOrder" class="btn btn-success"><h2>Buy</h2></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }

        else
        {
            <br />

        <div class="text-info text-bold" style="text-align:center;font-size:20px;">

        Không có sản phẩm nào được thêm vào giỏ...

        </div>

            <br />

        }
    </form>

