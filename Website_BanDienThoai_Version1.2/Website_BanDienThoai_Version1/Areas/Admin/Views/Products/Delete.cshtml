@model Website_BanDienThoai_Version1.Models.ViewModel.ProductViewModel

<br />
<div class="col-6 " style="padding-left:40px;font-size:30px;text-align:center">
    <p class="text-info"> Xóa sản phẩm </p>
</div>
<br />
<br />
<div style="padding-left:50px;font-size:14px;">
    <form method="post">
        <div class="p-4 border rounded row text-bold">
            <input hidden asp-for="Products.Id" />
            <div asp-validation-summary="ModelOnly" readonly class="text-danger"></div>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Name">Tên</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Name" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Memory">Ram</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Memory" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Quantity">Số lượng</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Quantity" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Capacity">Bộ nhớ</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Capacity" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Manufacturer">Nhà sản xuất</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Manufacturer" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Color">Màu</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Color" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Price">Giá</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Price" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Category">Danh mục</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Category.Name" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpecialTag">Thể loại</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.SpecialTag.Name" readonly class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-1">
            </div>
            <div style="        height: 200px;
        width: 200px
">
                <img src="@Model.Products.Image" style=" width=50%;border-radius:5px;border:0px" />
            </div>
            <br />
            <br />
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Xóa" />
                <a asp-action="Index" class="btn btn-success">Trở lại</a>
            </div>
        </div>
    </form>
</div>