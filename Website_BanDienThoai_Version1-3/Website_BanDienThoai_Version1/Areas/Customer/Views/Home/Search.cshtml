@model List<Website_BanDienThoai_Version1.Models.Products>


<div class="header_slide">
    <div class="header_bottom_right">
        <div class="slider">
            <div id="slider">
                <div id="mover">
                    <div id="slide-1" class="slide">
                        <div class="slider-img">
                            <a href="preview.html">
                                <img src="~/images/slide/slide-4-image.png"
                                     alt="learn more" />
                            </a>
                        </div>
                        <div class="slider-text">
                            <h1>Xả hàng<br><span>SALE</span></h1>
                            <h2>Giảm tới 40%</h2>
                            <div class="features_list">
                                <h4>Click vào để biết thêm chi tiết về khuyến mãi</h4>
                            </div>
                            <a href="preview.html" class="button">Shop Now</a>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="slide">
                        <div class="slider-text">
                            <h1>Xả hàng<br><span>SALE</span></h1>
                            <h2>Giảm tới 30%</h2>
                            <div class="features_list">
                                <h4>Click vào để biết thêm chi tiết về khuyến mãi</h4>
                            </div>
                            <a href="preview.html" class="button">Shop Now</a>
                        </div>
                        <div class="slider-img">
                            <a href="preview.html">
                                <img src="~/images/slide/slide-2-image.png"
                                     alt="learn more" />
                            </a>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="slide">
                        <div class="slider-img">
                            <a href="preview.html">
                                <img src="~/images/slide/slide-3-image.png"
                                     alt="learn more" />
                            </a>
                        </div>
                        <div class="slider-text">
                            <h1>Xả hàng<br><span>SALE</span></h1>
                            <h2>Giảm tới 10%</h2>
                            <div class="features_list">
                                <h4>Click vào để biết thêm chi tiết về khuyến mãi</h4>
                            </div>
                            <a href="preview.html" class="button">Shop Now</a>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
</div>
<div class="content_top">
    <div class="see">
        <p><a href="#">Xem tất cả sản phẩm</a></p>
    </div>
    <div class="clear"></div>
</div>
<div class="main">
    <div class="row">
        @foreach (var product in Model)
        {
                <div class="col-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4 class="my-0 font-weight-normal">
                                <label style="font-size:18px;color:steelblue;">@product.Name</label>
                            </h4>
                        </div>
                        <img class="card-img-top" style="height:100%;" src="@product.Image" alt="Card Image" />
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <label style="font-size:20px;color:#a51313;">Giá:&nbsp;<b>@product.Price<sup>đ</sup></b></label>
                                </div>
                                <div class="add-cart">
                                    <a asp-action="Details" asp-controller="Home" class="button" asp-route-id="@product.Id">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
           

        }
    </div>
</div>
