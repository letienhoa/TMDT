@model IEnumerable<Website_BanDienThoai_Version1.Models.Users>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6 " style="padding-left:40px;font-size:30px;text-align:center;">

        <p class="text-info"> Danh sách người dùng</p>
    </div>

    <div class="col-6 text-right" style="padding-right:20px;">
        <a asp-action="Create" class="btn btn-info">Thêm người dùng</a>
    </div>
</div>
<br />
<div style="font-size:14px;">
    <table class="table table-striped boder">
        <tr class="table-info text-bold">
            <th>
                Họ tên
            </th>
            <th>
                Tên hiển thị
            </th>
            <th>
                Mật khẩu
            </th>
            <th>
                Email
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Giới tính
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(m => item.Name)
        </td>
        <td>
            @Html.DisplayFor(m => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(m => item.Password)
        </td>
        <td>
            @Html.DisplayFor(m => item.Email)
        </td>
        <td>
            @Html.DisplayFor(m => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(m => item.DateOfBith)
        </td>
        @if (item.Gender == 1)
        {
            <td>
                Nam
            </td>
        }
        else
        {
            <td>
                Nữ
            </td>
        }
        <td style="width:150px">
            <div class="btn-group" role="group">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id"><i class="fas fa-list-alt"></i></a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
            </div>
        </td>
    </tr>

        }
    </table>
</div>