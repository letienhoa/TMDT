@model Website_BanDienThoai_Version1.Models.SpecialTag
@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<h2 class="text-info" style="padding-left:40px;font-size:30px;text-align:center;">Thêm loại sản phẩm</h2>

<form method="post" asp-action="Create" style="padding-left:50px;font-size:14px;">

    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name">Tên loại sản phẩm</label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Lưu lại" />
            <a asp-action="Index" class="btn btn-success">Trở lại</a>
        </div>
    </div>
</form>
