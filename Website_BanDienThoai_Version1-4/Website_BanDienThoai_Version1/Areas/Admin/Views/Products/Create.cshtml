@model Website_BanDienThoai_Version1.Models.ViewModel.ProductViewModel
@using Website_BanDienThoai_Version1.Extentions
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info" style="padding-left:30px;font-size:28px;text-align:center">Thêm sản phẩm</h2>
<br />
<br />
<div style="padding-left:30px;font-size:14px;">
    <form method="post" enctype="multipart/form-data">
        <div class="border" style="font-size:14px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2 text-bold">
                    <label asp-for="Products.Name">Tên sản phẩm</label>
                </div>
                <div class="col-5">
                    <input asp-for="Products.Name" class="form-control" />
                </div>
                <span asp-validation-for="Products.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 text-bold">
                    <label asp-for="Products.Image">Ảnh</label>
                </div>
                <div class="col-5">
                    <input type="file" name="files" class="form-control" />
                </div>
                <span asp-validation-for="Products.Image" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 text-bold">
                    <label asp-for="Products.Memory">Ram</label>
                </div>
                <div class="col-5 text-bold">
                    <input asp-for="Products.Memory" class="form-control" />
                </div>
                <span asp-validation-for="Products.Memory" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 text-bold">
                    <label asp-for="Products.Quantity">Số lượng</label>
                </div>
                <div class="col-5">
                    <input asp-for="Products.Quantity" class="form-control" />
                </div>
                <span asp-validation-for="Products.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 text-bold">
                    <label asp-for="Products.Capacity">Dung lượng</label>
                </div>
                <div class="col-5">
                    <input asp-for="Products.Capacity" class="form-control" />
                </div>
                <span asp-validation-for="Products.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 text-bold">
                    <label asp-for="Products.Manufacturer">Hãng sản xuất</label>
                </div>
                <div class="col-5">
                    <input asp-for="Products.Manufacturer" class="form-control" />
                </div>
                <span asp-validation-for="Products.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 text-bold">
                    <label asp-for="Products.Color">Màu</label>
                </div>
                <div class="col-5">
                    <input asp-for="Products.Color" class="form-control" />
                </div>
                <span asp-validation-for="Products.Color" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 text-bold">
                    <label asp-for="Products.Price">Giá</label>
                </div>
                <div class="col-5">
                    <input asp-for="Products.Price" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-bold">
                    <label asp-for="Category">Danh mục</label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.Products.CategoryId" asp-items="Model.Category.ToSelectListItem(Model.Products.CategoryId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-bold">
                    <label asp-for="SpecialTag">Thể loại</label>
                </div>
                <div class="col-5">

                    <select asp-for="@Model.Products.SpecialTagId" asp-items="Model.SpecialTag.ToSelectListItem(Model.Products.SpecialTagId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Lưu lại" />
                <a asp-action="Index" class="btn btn-success">Trở lại</a>
            </div>
        </div>
    </form>
</div>